three-grid()
    display: grid
    display: -ms-grid
    grid-template-columns: repeat(3, 1fr)
    -ms-grid-columns: 1fr 30px 1fr 30px 1fr
    grid-gap: 30px
    -ms-grid-gap: 30px

    & > :nth-child(2)
        -ms-grid-column: 3

    & > :nth-child(3)
        -ms-grid-column: 5

two-grid()
    display: grid
    display: -ms-grid
    grid-template-columns: 1fr 1fr
    -ms-grid-columns: 1fr 30px 1fr
    grid-gap: 30px

    & > :nth-child(2)
        -ms-grid-column: 3

    & > :nth-child(3)
        -ms-grid-row: 7
        -ms-grid-column: 1

    & > :nth-child(4)
        -ms-grid-row: 7
        -ms-grid-column: 3



four-grid()
    display: grid
    display: -ms-grid
    grid-template-columns: 1fr 1fr 2fr 2fr
    -ms-grid-columns: 1fr 30px 1fr 30px 2fr 30px 2fr
    grid-gap: 30px
    -ms-grid-gap: 30px

    & > :nth-child(2)
        -ms-grid-column: 3

    & > :nth-child(3)
        -ms-grid-column: 5
        -ms-grid-row: 5

    & > :nth-child(4)
        -ms-grid-column: 7