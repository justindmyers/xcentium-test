[image-dragger-wrapper]
    cursor: pointer
    position: relative
    z-index: 0

    &:before
        content: '\f047'
        font-family: 'FontAwesome'
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        background: #333
        opacity: 1
        display: flex
        justify-content: center
        align-items: center
        color: #fff
        font-size: 3rem
        z-index: -1

    img
        transition: 0.2s ease-in opacity
        
    &:hover img
        opacity: .5